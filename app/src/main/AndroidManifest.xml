<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.johnkaehler.pacificfantasysports">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity android:name=".Register" />
        <activity
            android:name=".CreateLeague"
            android:label="@string/title_activity_create_league"
            android:theme="@style/AppTheme.NoActionBar" />
        <intent-filter>
            <action android:name="com.example.johnkaehler.pacificfantasysports.CreateLeague" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        <activity
            android:name=".JoinLeague"
            android:label="@string/title_activity_join_league"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewLeagues"
            android:label="@string/title_activity_view_leagues"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
